<Window x:Class="Synethia.App.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Synethia.App"
		mc:Ignorable="d" Closed="Window_Closed"
		Title="Synethia | Demo (v0.1)" MinHeight="450" MinWidth="800" Height="550" Width="800" Icon="./Synethia.png">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<StackPanel VerticalAlignment="Center">
			<ToggleButton x:Name="DashboardBtn" Click="DashboardBtn_Click" Content="Dashboard" Padding="10" Margin="5" FontWeight="Bold"/>
			<ToggleButton x:Name="Page1Btn" Click="Page1Btn_Click" Content="Page1" Padding="10" Margin="5" FontWeight="Bold"/>
			<ToggleButton x:Name="Page2Btn" Click="Page2Btn_Click" Content="Page2" Padding="10" Margin="5" FontWeight="Bold"/>
			<ToggleButton x:Name="Page3Btn" Click="Page3Btn_Click" Content="Page3" Padding="10" Margin="5" FontWeight="Bold"/>
		</StackPanel>

		<Frame x:Name="ContentFrame" Grid.Column="1" NavigationUIVisibility="Hidden"/>
	</Grid>
</Window>
